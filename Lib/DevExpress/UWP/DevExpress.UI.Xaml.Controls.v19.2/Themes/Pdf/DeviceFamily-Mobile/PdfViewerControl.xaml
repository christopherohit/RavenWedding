<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxc="using:DevExpress.UI.Xaml.Controls"
    xmlns:dxcip="using:DevExpress.UI.Xaml.Controls.Internal.Pdf"
    xmlns:dxcis="using:DevExpress.UI.Xaml.Controls.Internal.SettingsBar"
    xmlns:core="using:DevExpress.Core"
    xmlns:mvvmui="using:DevExpress.Mvvm.UI"
    xmlns:mvvmi="using:DevExpress.Mvvm.UI.Interactivity">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///DevExpress.UI.Xaml.Controls.v19.2/Themes/Pdf/PdfViewerControl.Common.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="dxc:PdfViewerControl" BasedOn="{StaticResource PdfViewerControlStyleBase}">
        <Setter Property="ZoomMode" Value="FitWidth"/>
        <Setter Property="OverlaySettingsTemplate">
            <Setter.Value>
                <DataTemplate>
                    <dxc:SimpleSettingsBarOverlaySettings>
                        <dxc:SimpleSettingsBarOverlaySettings.AttachmentsPanelLocation>
                            <dxc:PdfOverlayBarLocation Location="Bottom" Width="NaN" Height="350"/>
                        </dxc:SimpleSettingsBarOverlaySettings.AttachmentsPanelLocation>
                        <dxc:SimpleSettingsBarOverlaySettings.BookmarksPanelLocation>
                            <dxc:PdfOverlayBarLocation Location="Bottom" Width="NaN" Height="350"/>
                        </dxc:SimpleSettingsBarOverlaySettings.BookmarksPanelLocation>
                        <dxc:SimpleSettingsBarOverlaySettings.SettingsBarLocation>
                            <dxc:PdfOverlayBarLocation Location="Top" Width="NaN" Height="60"/>
                        </dxc:SimpleSettingsBarOverlaySettings.SettingsBarLocation>
                        <dxc:SimpleSettingsBarOverlaySettings.FindPanelLocation>
                            <dxc:PdfOverlayBarLocation Location="Top" Width="NaN" Height="60"/>
                        </dxc:SimpleSettingsBarOverlaySettings.FindPanelLocation>
                    </dxc:SimpleSettingsBarOverlaySettings>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

