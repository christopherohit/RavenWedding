<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="using:DevExpress.Core">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="RecurrentRuleChangingWarningBackground" Color="#FFFFB115" Core:ColorKey.Id="EditAppointmentDialogColors.WarningBackground.Light"/>
            <SolidColorBrush x:Key="EditAppointmentDialogHeaderForegroundBrush" Color="#FF0078D7" Core:ColorKey.Id="EditAppointmentDialogColors.HeaderForeground.Light"/>
            <SolidColorBrush x:Key="EditAppointmentDialogPaneHeaderForegroundBrush" Color="#FF0078D7" Core:ColorKey.Id="EditAppointmentDialogColors.PaneHeaderForeground.Light"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="RecurrentRuleChangingWarningBackground" Color="#FFFFB115"  Core:ColorKey.Id="EditAppointmentDialogColors.WarningBackground.Default"/>
            <SolidColorBrush x:Key="EditAppointmentDialogHeaderForegroundBrush" Color="#FF0078D7" Core:ColorKey.Id="EditAppointmentDialogColors.HeaderForeground.Default"/>
            <SolidColorBrush x:Key="EditAppointmentDialogPaneHeaderForegroundBrush" Color="#FF0078D7" Core:ColorKey.Id="EditAppointmentDialogColors.PaneHeaderForeground.Default"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>

