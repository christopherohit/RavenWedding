<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:schi="using:DevExpress.UI.Xaml.Scheduler.Internal"
    xmlns:sch="using:DevExpress.UI.Xaml.Scheduler"
    xmlns:internal="using:DevExpress.UI.Xaml.Internal">

    <x:String x:Key="firstButtonPath">
        M 2 2 L 2 19 L 3 19 L 3 2 L 2 2 z 
        M 12 3 L 4 10 L 3.5 10.5 L 4 11 L 12 18 L 13 18 L 13 17 L 6 11 L 5.5 10.5 L 6 10 L 13 4 L 13 3 L 12 3 z
        M 18 3 L 10 10 L 9.5 10.5 L 10 11 L 18 18 L 19 18 L 19 17 L 12 11 L 11.5 10.5 L 12 10 L 19 4 L 19 3 L 18 3 z
    </x:String>
    <x:String x:Key="prevPageButtonPath">
        M 10 3 L 2 10 L 1.5 10.5 L 2 11 L 10 18 L 11 18 L 11 17 L 4 11 L 3.5 10.5 L 4 10 L 11 4 L 11 3 L 10 3 z 
        M 17 3 L 9 10 L 8.5 10.5 L 9 11 L 17 18 L 18 18 L 18 17 L 11 11 L 10.5 10.5 L 11 10 L 18 4 L 18 3 L 17 3 z
    </x:String>
    <x:String x:Key="prevButtonPath">
        M 14 3 L 6 10 L 5.5 10.5 L 6 11 L 14 18 L 15 18 L 15 17 L 8 11 L 7.5 10.5 L 8 10 L 15 4 L 15 3 L 14 3 z
    </x:String>
    <x:String x:Key="nextButtonPath">
        M 6 3 L 6 4 L 13 10 L 13.5 10.5 L 13 11 L 6 17 L 6 18 L 7 18 L 15 11 L 15.5 10.5 L 15 10 L 7 3 L 6 3 z
    </x:String>
    <x:String x:Key="nextPageButtonPath">
