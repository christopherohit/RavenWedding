<ResourceDictionary
    x:Class="DevExpress.UI.Xaml.Scheduler.Themes.SchedulerHeaderResourceDictionary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="using:DevExpress.Core"
    xmlns:sch="using:DevExpress.UI.Xaml.Scheduler"
    xmlns:schi="using:DevExpress.UI.Xaml.Scheduler.Internal"
    xmlns:dxr="using:DevExpress.UI.Xaml.Ribbon">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///DevExpress.UI.Xaml.Scheduler.v19.2/Themes/SchedulerHeader.Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <schi:DateTimeRangeToStringConverter x:Key="dateToStringConverter"/>
    <schi:SchedulerGroupTypeToBooleanConverter x:Key="groupTypeToBooleanConverter" Invert="True"/>
    
    <dx:TypeTemplateSelector x:Key="toolbarItemTemplateSelector" FindDescendants="True">
        <DataTemplate x:Key="SchedulerToolbarItem"                                                                 >
            <dxr:ToolbarButton x:ConnectionId='5'                                                 
                                                         
                                                                       
                                                                                         />
        </DataTemplate>
        <DataTemplate x:Key="SchedulerViewToolbarItem"                                                                     >
            <dxr:ToolbarToggleButton x:ConnectionId='4'                                                 
                                                               
                                                                             
                                                                                               
                                                                       
                                     ActAsSimpleButton="True"
                                     IsThreeStateMode="False"/>
        </DataTemplate> 
    </dx:TypeTemplateSelector>

    <DataTemplate                                                                   x:Key="toolbarGroupTemplate">
        <dxr:ToolbarGroup x:ConnectionId='3'                                                     
                                                                                               
                                                      />
    </DataTemplate>
    <DataTemplate x:Key="toolbarTemplate"                                                              >
        <dxr:ToolbarControl x:ConnectionId='2' VerticalAlignment="Stretch" 
                            GroupTemplate="{StaticResource toolbarGroupTemplate}"
                                                                                />
    </DataTemplate>
    <DataTemplate x:Key="headerTemplate"                                   >
        <TextBlock x:ConnectionId='1'                                                                                               
                   FontSize="20"
                   Margin="0,12,0,12"
                   FontFamily="Segoe UI"
                   FontWeight="Normal"/>
    </DataTemplate>

    <Style TargetType="sch:SchedulerHeaderSettings">
        <Setter Property="ToolbarTemplate" Value="{StaticResource toolbarTemplate}"/>
        <Setter Property="ToolbarItemTemplateSelector" Value="{StaticResource toolbarItemTemplateSelector}"/>
        <Setter Property="HeaderPresenterTemplate" Value="{StaticResource headerTemplate}"/>
    </Style>
    
    <Style TargetType="schi:SchedulerHeaderControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="schi:SchedulerHeaderControl">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="12,0,0,0">
                            <dxr:ToolbarButton Content="Prev" ItemStyle="Glyph" Command="{Binding Owner.Commands.GoPrevInterval, RelativeSource={RelativeSource Mode=TemplatedParent}}" VerticalAlignment="Center" Padding="8">
                                <dxr:ToolbarButton.Icon>
                                    <SymbolIcon Symbol="Back" />
                                </dxr:ToolbarButton.Icon>
                            </dxr:ToolbarButton>
                            <dxr:ToolbarButton Content="Next" ItemStyle="Glyph" Command="{Binding Owner.Commands.GoNextInterval, RelativeSource={RelativeSource Mode=TemplatedParent}}" VerticalAlignment="Center" Padding="8">
                                <dxr:ToolbarButton.Icon>
                                    <SymbolIcon Symbol="Forward" />
                                </dxr:ToolbarButton.Icon>
                            </dxr:ToolbarButton>
                            <ContentPresenter VerticalAlignment="Center"
                                              Margin="8,0,0,0"
                                              Foreground="{ThemeResource SchedulerControlHeaderForegroundBrush}"
                                              Content="{Binding VisualData, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                              ContentTemplate="{Binding Settings.HeaderPresenterTemplate, RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                        </StackPanel>
                        <schi:ResourceNavigatorControl Grid.Row="1"
                                                       Margin="16,4,4,4"
                                                       Foreground="{ThemeResource SchedulerControlHeaderForegroundBrush}"
                                                       Commands="{Binding Owner.Commands, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                       Visibility="{Binding Owner.ActualGroupType, RelativeSource={RelativeSource Mode=TemplatedParent}, Converter={StaticResource groupTypeToBooleanConverter}, ConverterParameter=None}"/>
                        <ContentPresenter x:Name="PART_ToolbarPresenter" 
                                          Grid.Column="1"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Stretch"
                                          VerticalContentAlignment="Stretch"
                                          Content="{Binding VisualData, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                          ContentTemplate="{Binding Settings.ToolbarTemplate, RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

