<ResourceDictionary
    x:Class="DevExpress.UI.Xaml.Grid.Native.ContextMenuTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevExpress.UI.Xaml.Grid.Native"
    xmlns:Core="using:DevExpress.Core"
    xmlns:mvvmui="using:DevExpress.Mvvm.UI"
    xmlns:Grid="using:DevExpress.UI.Xaml.Grid"
    xmlns:Ribbon="using:DevExpress.UI.Xaml.Ribbon">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///DevExpress.UI.Xaml.Grid.v19.2/Themes/StandardStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <mvvmui:BooleanToVisibilityConverter x:Key="boolToVisibilityConverter"/>
    <mvvmui:BooleanToVisibilityConverter x:Key="boolToVisibilityInvertConverter" Inverse="True"/>
    <Core:BooleanToNullableBooleanConverter x:Key="boolToNullableConverter"/>
    <mvvmui:DefaultBooleanToBooleanConverter x:Key="defaultBooleanToBoolConverter"/>
    <local:GroupUngroupCaptionConverter x:Key="boolToGroupCommandContentConverter" />
    <Core:BoolToObjectConverter x:Key="boolToGroupIconSourceConverter" 
                                ValueTrue="F0 M 0,23 l 1,1 23,-23 -1,-1 z M 8,3 l 11,0 1,-1 -13,0 0,4 1,0 z M 21,5 l 0,11 -3,0 0,1 4,0 0,-13 z M 3,19 l0,-11 11,0 1,-1 -13,0 0,13 z M 16,10 l 0,11 -11,0 -1,1 13,0 0,-13 z"
                                ValueFalse="F0 M0,11 v15 h15 V11 H6 z M14,25 H1 V12 h13 V25 z M5,6 5,10 6,10 6,7 19,7 19,20 16,20 16,21 20,21 20,6 Z"/>

    <DataTemplate x:Key="GridColumnContextMenuTemplate"                                            >
        <Ribbon:ContextToolbarControl x:ConnectionId='1' Orientation="Vertical"
                               Padding="0">
            <Ribbon:ContextToolbarGroup>
                <Ribbon:ContextToolbarButton x:ConnectionId='2' Content="{Binding MenuGroupPanelFullExpand, Source={StaticResource GridControlLocalizer}}"
                                                                                                     
                                             IconSource="F0 M7 4 h13 v1 h-13 z M0 4 h5 v1 h-5 z M10 10 h10 v1 h-10 z M3 10 h5 v1 h-5 z M13 16 h7 v1 h-7z M6 16 h5 v1 h-5 z" 
                                             IconWidth="32"
                                             IconHeight="32"
                                             Visibility="{Binding Column.IsGrouped, Mode=OneWay, Converter={StaticResource boolToVisibilityConverter}}"/>
                <Ribbon:ContextToolbarButton Content="{Binding MenuGroupPanelFullCollapse, Source={StaticResource GridControlLocalizer}}"
                                             Command="{Binding Commands.CollapseAllGroups, Mode=OneWay}" 
                                             IconSource="F0 M7 4 h13 v 1 h -13 Z M5,4 3,4 3,2 2,2 2,4 0,4 0,5 2,5 2,7 3,7 3,5 5,5 Z M7 10 h13 v 1 h -13 Z M5,10 3,10 3,8 2,8 2,10 0,10 0,11 2,11 2,13 3,13 3,11 5,11 Z M7 16 h13 v 1 h -13 Z M5,16 3,16 3,14 2,14 2,16 0,16 0,17 2,17 2,19 3,19 3,17 5,17 Z" 
                                             IconWidth="32"
                                             IconHeight="32"
                                             Visibility="{Binding Column.IsGrouped, Mode=OneWay, Converter={StaticResource boolToVisibilityConverter}}"
                                             FlyoutFlowBreakWithSeparator="True"/>

                <Ribbon:ContextToolbarButton Content="{Binding MenuColumnSortAscending, Source={StaticResource GridControlLocalizer}}"
                                             Command="{Binding Column.Commands.SetColumnSortOrder, Mode=OneWay}" CommandParameter="Ascending"
                                             IconSource="F0 M6,25.5 L6,5 5,5 5,25.5 0,20 0,21 5.5,27 11,21 11,20 Z M 9 7 h5 v1 h-5 Z M9 10 h7 v1 h-7 Z M9 13 h9 v1 h-9 Z M9 16 h11 v1 h-11 Z"
                                             IconWidth="32" 
                                             IconHeight="32"/>
                <Ribbon:ContextToolbarButton Content="{Binding MenuColumnSortDescending, Source={StaticResource GridControlLocalizer}}"
                                             Command="{Binding Column.Commands.SetColumnSortOrder, Mode=OneWay}" CommandParameter="Descending"
                                             IconSource="F0 M6,25.5 L6,5 5,5 5,25.5 0,20 0,21 5.5,27 11,21 11,20 Z M9 16 h5 v1 h-5 Z M9 13 h7 v1 h-7 Z M9 10 h9 v1 h-9 Z M9 7 h11 v1 h-11 Z"
                                             IconWidth="32" 
                                             IconHeight="32"/>
                <Ribbon:ContextToolbarButton Content="{Binding MenuColumnClearSorting, Source={StaticResource GridControlLocalizer}}"
                                             Command="{Binding Column.Commands.SetColumnSortOrder, Mode=OneWay}" CommandParameter="None"
                                             IconSource="F0 M0 0 Z" 
                                             IconWidth="32" 
                                             IconHeight="32"                                            
                                             FlyoutFlowBreakWithSeparator="True"/>

                <Ribbon:ContextToolbarToggleButton x:ConnectionId='3'                                                                                                                 
                                                                                                                  
                                                   IconWidth="32"
                                                   IconHeight="32"
                                                                                                                                                                 />
                <Ribbon:ContextToolbarButton x:ConnectionId='4' Content="{Binding MenuColumnShowGroupPanel, Source={StaticResource GridControlLocalizer}}"
                                             IconSource="F0 M0 0 Z" 
                                             IconWidth="32"
                                             IconHeight="32"
                                                                                              CommandParameter="True"
                                                                                                                                                       />
                <Ribbon:ContextToolbarButton x:ConnectionId='5' Content="{Binding MenuColumnHideGroupPanel, Source={StaticResource GridControlLocalizer}}"
                                             IconSource="F0 M0 0 Z" 
                                             IconWidth="32"
                                             IconHeight="32"
                                                                                              CommandParameter="False"
                                                                                                                                                 />
                <Ribbon:ContextToolbarButton x:ConnectionId='6' Content="{Binding MenuColumnShowColumnChooser, Source={StaticResource GridControlLocalizer}}"
                                             IconSource="M0,3v20h20V3H1z M19,22H1V4h18V25z M3,16v4h14v-4H4z M16,19H4v-2h12V19z M3,11v4h14v-4H3z M16,14H4v-2h12V14z M3,6v4h14V6H3z M16,9H4v-2h12V9z"
                                             IconWidth="32"
                                             IconHeight="32"
                                                                                           CommandParameter="True"/>
            </Ribbon:ContextToolbarGroup>
        </Ribbon:ContextToolbarControl>
    </DataTemplate>

    <DataTemplate x:Key="GridGroupPanelContextMenuTemplate"                                                >
        <Ribbon:ContextToolbarControl Orientation="Vertical"
                               Padding="0">
            <Ribbon:ContextToolbarGroup>
                <Ribbon:ContextToolbarButton Content="{Binding MenuGroupPanelFullExpand, Source={StaticResource GridControlLocalizer}}" Command="{Binding Commands.ExpandAllGroups, Mode=OneWay}"/>
                <Ribbon:ContextToolbarButton Content="{Binding MenuGroupPanelFullCollapse, Source={StaticResource GridControlLocalizer}}" Command="{Binding Commands.CollapseAllGroups, Mode=OneWay}"
                                      FlyoutFlowBreakWithSeparator="True"/>
                <Ribbon:ContextToolbarButton Content="{Binding MenuGroupPanelClearGrouping, Source={StaticResource GridControlLocalizer}}" Command="{Binding Commands.ClearGrouping, Mode=OneWay}"/>
                <!--<Ribbon:ContextToolbarButton Content="Hide Group Panel" 
                                             Command="{x:Bind Commands.ChangeShowGroupPanel}" CommandParameter="False"
                                             Visibility="{x:Bind Grid.ShowGroupPanel, Converter={StaticResource boolToVisibilityConverter}}"/>-->
            </Ribbon:ContextToolbarGroup>
        </Ribbon:ContextToolbarControl>
    </DataTemplate>
</ResourceDictionary>

