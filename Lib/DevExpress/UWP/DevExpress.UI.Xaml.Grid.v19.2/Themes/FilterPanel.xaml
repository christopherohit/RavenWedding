<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxg="using:DevExpress.UI.Xaml.Grid"
    xmlns:dx="using:DevExpress.Core">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///DevExpress.UI.Xaml.Grid.v19.2/Themes/StandardStyles.xaml"/>
        <ResourceDictionary Source="ms-appx:///DevExpress.UI.Xaml.Grid.v19.2/Themes/FilterPanel.Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="dxg:FilterPanelControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderBrush="{ThemeResource GridControlFilterPanelBorderThemeBrush}" BorderThickness="0,1,0,0">
                        <dx:DockPanel>
                            <CheckBox x:Name="PART_FilterPanelCheckBox" IsChecked="{Binding Path=IsFilterEnabled, Mode=TwoWay}" dx:DockPanel.Dock="Left" IsTabStop="False" Margin="6" MinWidth="32"/>

                            <Button x:Name="PART_FilterPanelCloseButton" Content="&#xE106;" FontFamily="Segoe MDL2 Assets"  Command="{Binding Path=Commands.ClearFilter}" dx:DockPanel.Dock="Right"  IsTabStop="False" Margin="6" Padding="4"/>

                            <TextBlock x:Name="PART_FilterPanelText" Text="{Binding Path=FilterPanelText}" VerticalAlignment="Center" FontSize="{StaticResource FilterPanelFontSize}"/>
                        </dx:DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>

