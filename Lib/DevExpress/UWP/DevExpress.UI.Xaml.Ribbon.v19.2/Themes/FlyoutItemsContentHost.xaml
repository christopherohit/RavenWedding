<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Internal="using:DevExpress.UI.Xaml.Ribbon.Internal"
    xmlns:Ribbon="using:DevExpress.UI.Xaml.Ribbon">
    
    <Style TargetType="Internal:FlyoutItemsContentHost">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Internal:FlyoutItemsContentHost">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  x:Name="PART_ScrollViewer">
                        <Ribbon:RibbonFlyoutPanel Orientation="{TemplateBinding Orientation}"
                                                  FlyoutCalculator="{TemplateBinding FlyoutCalculator}"
                                                  ColumnCount="{TemplateBinding ColumnCount}"
                                                  ItemsSource="{TemplateBinding ItemsSource}"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Top"/>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

