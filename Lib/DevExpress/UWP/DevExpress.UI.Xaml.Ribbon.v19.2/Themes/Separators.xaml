<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Ribbon="using:DevExpress.UI.Xaml.Ribbon"
    xmlns:Xaml="using:DevExpress.UI.Xaml"
    xmlns:Core="using:DevExpress.Core"
    xmlns:Editors="using:DevExpress.UI.Xaml.Editors"
    xmlns:Internal="using:DevExpress.UI.Xaml.Ribbon.Internal"
    xmlns:Controls="using:DevExpress.UI.Xaml.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///DevExpress.UI.Xaml.Ribbon.v19.2/Themes/Separators.Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="Internal:HorizontalItemSeparator">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="{ThemeResource HorizontalItemSeparatorBackgroundBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Internal:HorizontalItemSeparator">
                    <Rectangle Fill="{TemplateBinding Background}"
                               HorizontalAlignment="Stretch"
                               Height="1"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Internal:VerticalItemSeparator">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="{ThemeResource VerticalItemSeparatorBackgroundBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Internal:VerticalItemSeparator">
                    <Rectangle Fill="{TemplateBinding Background}"
                               VerticalAlignment="Stretch"
                               Width="1"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Ribbon:BackstageSeparatorItem">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="{ThemeResource BackstageSeparatorItemBackgroundBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Ribbon:BackstageSeparatorItem">
                    <Rectangle Fill="{TemplateBinding Background}"
                               HorizontalAlignment="Stretch"
                               Height="1"
                               Margin="{TemplateBinding Padding}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

