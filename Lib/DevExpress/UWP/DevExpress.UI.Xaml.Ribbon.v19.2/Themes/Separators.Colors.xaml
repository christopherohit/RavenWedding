<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="using:DevExpress.Core">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="VerticalItemSeparatorBackgroundBrush" Color="#19000000" Core:ColorKey.Id="RibbonFlyoutColors.VerticalSeparator.Light"/>
            <SolidColorBrush x:Key="HorizontalItemSeparatorBackgroundBrush" Color="#19000000" Core:ColorKey.Id="RibbonFlyoutColors.HorizontalSeparator.Light"/>
            <SolidColorBrush x:Key="BackstageSeparatorItemBackgroundBrush" Color="#44FFFFFF" Core:ColorKey.Id="BackstageViewColors.Separator.Light"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="VerticalItemSeparatorBackgroundBrush" Color="#19000000" Core:ColorKey.Id="RibbonFlyoutColors.VerticalSeparator.Default" />
            <SolidColorBrush x:Key="HorizontalItemSeparatorBackgroundBrush" Color="#19000000" Core:ColorKey.Id="RibbonFlyoutColors.HorizontalSeparator.Default" />
            <SolidColorBrush x:Key="BackstageSeparatorItemBackgroundBrush" Color="#44FFFFFF" Core:ColorKey.Id="BackstageViewColors.Separator.Default" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>




