    <Style TargetType="Ribbon:RibbonToolbarFontEdit">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Ribbon:RibbonToolbarFontEdit">
                    <Grid Margin="{TemplateBinding Padding}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition MinWidth="50" />
                        </Grid.ColumnDefinitions>
                        <Ribbon:RibbonToolbarComboBox MinHeight="35"
