        <Setter Property="ItemContainerStyle" Value="{StaticResource RibbonToolbarComboBoxMobileItemContainerStyle}" />
        <Setter Property="Margin" Value="8,7" />
        <Setter Property="MinWidth" Value="{ThemeResource ComboBoxThemeMinWidth}" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="Foreground" Value="{ThemeResource RibbonToolbarComboBoxMobileForegroundBrush}" />
        <Setter Property="Background" Value="{ThemeResource RibbonToolbarComboBoxMobileBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource RibbonToolbarComboBoxMobileBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="UseIndependentFlyout" Value="True" />
        <Setter Property="SelectedItemsTemplate">
            <Setter.Value>
                <DataTemplate>
                    <dxc:DXComboBoxSelectedItemsPresenter SelectedItemsSource="{Binding}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Ribbon:RibbonToolbarComboBox">
                    <Grid BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}" 
                          Background="{TemplateBinding Background}"
                          x:Name="PART_Background"
                          >
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="PART_Background.Background" Value="{ThemeResource RibbonToolbarComboBoxMobileBackgroundHoverBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="PART_Background.Background" Value="{ThemeResource RibbonToolbarComboBoxMobileBackgroundPressedBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Disabled" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <ContentPresenter Margin="8,4" 
                                          x:Name="PART_Content"
                                          Content="{TemplateBinding SelectedItem}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left" />
                        <PathIcon Margin="4" Data="F0 M 0,0 l 1 0 7 7 7 -7 1 0 -8 8 -8 -8 z" 
                                    Width="16" Height="8" 
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Center"
                                    Foreground="{TemplateBinding Foreground}" />
                        <XamlInternal:NestedMenuFlyoutControl PlacementTarget="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                      CloseOnTargetClick="{TemplateBinding XamlInternal:MenuFlyoutControl.CloseOnTargetClick}"
                                                       DataContext="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                      AnimationDuration="0:0:0.1"
                                                      HorizontalAlignment="Stretch"
                                                      x:Name="PART_Flyout"
                                                       >
                            <Xaml:DXListView ItemsSource="{Binding Items}"
                                            Background="{TemplateBinding Background}"
                                            Foreground="{TemplateBinding Foreground}"
                                            HorizontalAlignment="Stretch"
                                            GroupItemsPath="{Binding GroupItemsPath}"
                                            SelectionMode="{Binding SelectionMode}"
                                            IsGrouping="{Binding IsGrouping}"
                                            ItemContainerStyle="{Binding ItemContainerStyle}"
                                            ItemContainerStyleSelector="{Binding ItemContainerStyleSelector}"
                                            ItemTemplate="{Binding ItemTemplate}"
                                            ItemTemplateSelector="{Binding ItemTemplateSelector}"
                                            SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                            ShowCheckBoxes="{Binding ShowCheckBoxes}"
                                            BorderThickness="1"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            MaxHeight="300" />
                        </XamlInternal:NestedMenuFlyoutControl>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
