<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevExpress.UI.Xaml.Charts"
    xmlns:dx="using:DevExpress.Core">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///DevExpress.UI.Xaml.Charts.v19.2/Themes/Series/SeriesPresentation.Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="local:SeriesLabelPresentation">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SeriesLabelPresentation">
                    <ContentPresenter 
                        Clip="{Binding Path=ElementInfo.Clip, RelativeSource={RelativeSource TemplatedParent}}"
                        Content="{Binding Path=ElementInfo, RelativeSource={RelativeSource TemplatedParent}}"
                        ContentTemplate="{Binding Path=ElementInfo.Element.ElementTemplate, RelativeSource={RelativeSource TemplatedParent}}"
                        Foreground="{Binding Path=Element.Foreground}"
                        FontFamily="{Binding Path=Element.FontFamily}"
                        FontSize="{Binding Path=Element.FontSize}"
                        FontStretch="{Binding Path=Element.FontStretch}"
                        FontStyle="{Binding Path=Element.FontStyle}"
                        FontWeight="{Binding Path=Element.FontWeight}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:SimpleBarPresentation">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SimpleBarPresentation">
                    <Border Background="{ThemeResource ChartsSimpleBarPresentationBackgroundBrush}" BorderThickness="1" BorderBrush="{ThemeResource ChartsSimpleBarBorderBrush}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:SimpleMarkerPresentation">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SimpleMarkerPresentation">
                    <Ellipse Stretch="Fill" Fill="{ThemeResource ChartsSimpleMarkerPresentationBackgroundBrush}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="local:SimpleAreaPresentation">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SimpleAreaPresentation">
                    <Rectangle Stretch="Fill" Fill="{ThemeResource ChartsSimpleAreaBackgroundBrush}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:SeriesTitlePresentation">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SeriesTitlePresentation">
                    <local:SeriesTitlePanel Title="{Binding Path=ElementInfo.Element, RelativeSource={RelativeSource TemplatedParent}}">
                        <Border Background="{Binding Path=ElementInfo.Element.Background, RelativeSource={RelativeSource TemplatedParent}}">
                            <ContentPresenter Foreground="{TemplateBinding Foreground}"
                                              FontFamily="{Binding Path=ElementInfo.Element.FontFamily, RelativeSource={RelativeSource TemplatedParent}}"
                                              FontSize="{Binding Path=ElementInfo.Element.FontSize, RelativeSource={RelativeSource TemplatedParent}}"
                                              FontStretch="{Binding Path=ElementInfo.Element.FontStretch, RelativeSource={RelativeSource TemplatedParent}}"
                                              FontStyle="{Binding Path=ElementInfo.Element.FontStyle, RelativeSource={RelativeSource TemplatedParent}}"
                                              FontWeight="{Binding Path=ElementInfo.Element.FontWeight, RelativeSource={RelativeSource TemplatedParent}}"
                                              Margin="{Binding Path=ElementInfo.Element.Margin, RelativeSource={RelativeSource TemplatedParent}}"
                                              Content="{Binding Path=ElementInfo.Element.Content, RelativeSource={RelativeSource TemplatedParent}}"
                                              ContentTemplate="{Binding Path=ElementInfo.Element.ContentTemplate, RelativeSource={RelativeSource TemplatedParent}}">
                            </ContentPresenter>
                        </Border>
                    </local:SeriesTitlePanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{ThemeResource ChartSeriesTitleForegroundThemeBrush}" />
    </Style>
</ResourceDictionary>

