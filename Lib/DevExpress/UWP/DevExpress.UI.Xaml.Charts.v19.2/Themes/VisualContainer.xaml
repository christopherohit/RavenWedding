<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevExpress.UI.Xaml.Charts">
    
    <Style TargetType="local:VisualContainer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:VisualContainer">
                    <local:VisualContainerItemsControl 
                        x:Name="PART_ItemsControl"
                        DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                        ItemsSource="{TemplateBinding Elements}">
                        <local:VisualContainerItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <local:VisualContainerPanel/>
                            </ItemsPanelTemplate>
                        </local:VisualContainerItemsControl.ItemsPanel>
                    </local:VisualContainerItemsControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

