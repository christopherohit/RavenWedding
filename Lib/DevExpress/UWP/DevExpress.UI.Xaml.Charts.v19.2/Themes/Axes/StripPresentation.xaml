<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevExpress.UI.Xaml.Charts">
    
    <Style TargetType="local:StripPresentation">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:StripPresentation">
                    <Path Data="{Binding Geometry}"
                          Fill="{Binding Path=Element.Brush}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

