    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:internal="using:DevExpress.UI.Xaml.Controls.Internal.SettingsBar" 
    xmlns:controls="using:DevExpress.UI.Xaml.Controls"
    xmlns:Core="using:DevExpress.Core">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///DevExpress.UI.Xaml.v20.2/Themes/SettingsBar/SettingsBarView.Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Core:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

    <Style TargetType="controls:SettingsBarItem" />
    
    <Style x:Key="moreButtonFlyoutPresenterStyle" TargetType="FlyoutPresenter">
        <Setter Property="Padding" Value="0" />
