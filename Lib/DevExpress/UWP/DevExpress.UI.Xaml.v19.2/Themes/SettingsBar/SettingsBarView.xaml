    <Style TargetType="internal:SettingsBarMoreButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="internal:SettingsBarMoreButton">
                    <controls:PathButton Style="{StaticResource MoreButtonDefaultStyle}"
                                         CloseFlyoutOnItemClick="False">
                        <controls:PathButton.Flyout>
                            <Flyout FlyoutPresenterStyle="{StaticResource moreButtonFlyoutPresenterStyle}">
                                <internal:SettingsBarFlyoutItemsControl ItemsSource="{Binding FlyoutItems, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                                        ItemTemplateSelector="{Binding FlyoutItemTemplateSelector, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                            </Flyout>
                        </controls:PathButton.Flyout>
                    </controls:PathButton>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="internal:SettingsBarView">
        <Setter Property="FlyoutItemTemplateSelector">
            <Setter.Value>
                <controls:SettingsBarItemTemplateSelector />
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <internal:ButtonsPanel />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
