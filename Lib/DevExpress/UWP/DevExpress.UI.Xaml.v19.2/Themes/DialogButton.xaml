<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mvvmui="using:DevExpress.Mvvm.UI"
    xmlns:xaml="using:DevExpress.UI.Xaml"
    xmlns:internal="using:DevExpress.UI.Xaml.Internal">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///DevExpress.UI.Xaml.v19.2/Themes/DialogButton.Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="mvvmui:DialogButton">
        <Setter Property="Background" Value="{ThemeResource DialogButtonBackgroundThemeBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource DialogButtonForegroundThemeBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource DialogButtonBorderThemeBrush}"/>
        <Setter Property="FocusVisualPrimaryBrush" Value="{ThemeResource DialogButtonOuterFocusVisualStroke}" />
        <Setter Property="FocusVisualSecondaryBrush" Value="{ThemeResource DialogButtonInnerFocusVisualStroke}" />
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,4,12,4"/>
        <Setter Property="UseSystemFocusVisuals" Value="True"/>
        <Setter Property="FocusVisualPrimaryThickness" Value="1" />
        <Setter Property="FocusVisualSecondaryThickness" Value="1" />
        <Setter Property="FocusVisualMargin" Value="1"/>
        <Setter Property="ClickMode" Value="Release"/>
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="Spacing" Value="8" />
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="mvvmui:DialogButton">
                    <internal:TrackPanel x:Name="RootPanel"
                                        AutomationProperties.AccessibilityView="Raw"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        Background="{TemplateBinding Background}"
                                        Padding="{TemplateBinding Padding}"
                                        Orientation="Horizontal"
                                        Spacing="{TemplateBinding Spacing}">
                        <internal:IconView x:Name="PART_Icon" UseIconPadding="False"/>
                        <ContentPresenter x:Name="ContentPresenter"
                                              AutomationProperties.AccessibilityView="Raw"
                                              internal:TrackPanel.HorizontalCellSize="*"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Content="{TemplateBinding Content}"                                             
                                              ContentTransitions="{TemplateBinding ContentTransitions}"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"
                                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}">
                        </ContentPresenter>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <PointerUpThemeAnimation Storyboard.TargetName="RootPanel"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="RootPanel.Background" Value="{ThemeResource DialogButtonBackgroundHoverBrush}" />
                                        <Setter Target="RootPanel.BorderBrush" Value="{ThemeResource DialogButtonBorderThemeBrush}" />
                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource DialogButtonForegroundThemeBrush}" />
                                        <Setter Target="PART_Icon.Foreground" Value="{ThemeResource DialogButtonForegroundThemeBrush}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="RootPanel.Background" Value="{ThemeResource DialogButtonBackgroundPressedBrush}" />
                                        <Setter Target="RootPanel.BorderBrush" Value="{ThemeResource DialogButtonBorderThemeBrush}" />
                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource DialogButtonForegroundPressedBrush}" />
                                        <Setter Target="PART_Icon.Foreground" Value="{ThemeResource DialogButtonForegroundPressedBrush}" />
                                    </VisualState.Setters>
                                    <Storyboard>
                                        <PointerDownThemeAnimation Storyboard.TargetName="RootPanel"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="RootPanel.Opacity" Value="0.7" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </internal:TrackPanel>
                </ControlTemplate>                
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
