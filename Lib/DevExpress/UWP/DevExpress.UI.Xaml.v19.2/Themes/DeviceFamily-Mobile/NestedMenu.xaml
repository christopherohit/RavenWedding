<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Xaml="using:DevExpress.UI.Xaml"
    xmlns:XamlInternal="using:DevExpress.UI.Xaml.Internal">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///DevExpress.UI.Xaml.v19.2/Themes/NestedMenu.Common.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="XamlInternal:NestedMenuFlyoutControl" BasedOn="{StaticResource StackedFlyoutControlStyleBase}">
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HeaderEnabledMode" Value="Never"/>
        <Setter Property="BackButtonEnabledMode" Value="Always"/>
        <Setter Property="StaysOpen" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="XamlInternal:NestedMenuFlyoutControl">
                    <Popup x:Name="PART_Popup"
                           IsLightDismissEnabled="{TemplateBinding IsLightDismissEnabled}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="OrientationStates">
                                <VisualState x:Name="Horizontal">
                                    <VisualState.Setters>
                                        <Setter Target="PART_Content.(Grid.ColumnSpan)" Value="1"/>
                                        <Setter Target="PART_Content.(Grid.Row)" Value="0"/>
                                        <Setter Target="PART_Content.(Grid.Column)" Value="1"/>
                                        <Setter Target="PART_Content.VerticalAlignment" Value="Stretch"/>
                                        <Setter Target="PART_Content.VerticalContentAlignment" Value="Center"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Vertical"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid x:Name="PART_Container"
                              BorderBrush="{TemplateBinding BorderBrush}"
                              BorderThickness="{TemplateBinding BorderThickness}"
                              Background="{x:Null}"
                              HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                              Grid.Row="1"
                                              Grid.ColumnSpan="2"
                                              x:Name="PART_Content"
                                              Background="{TemplateBinding Background}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Style="{TemplateBinding ContainerStyle}"/>

                        </Grid>
                    </Popup>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>

