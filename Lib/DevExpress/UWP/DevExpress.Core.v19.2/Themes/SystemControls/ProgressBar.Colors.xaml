<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="using:DevExpress.Core">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="#FF262626"  Core:ColorKey.Id="ProgressBarColors.Foreground.Default" />
            <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="#FFDCDCDC"  Core:ColorKey.Id="ProgressBarColors.Background.Default" />
            <SolidColorBrush x:Key="ProgressBarBorderBrush" Color="#FF3E3E3E" Core:ColorKey.Id="ProgressBarColors.BorderBrush.Default" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="#FF106EBE" Core:ColorKey.Id="ProgressBarColors.Foreground.Light"/>
            <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="#FFFFFFFF" Core:ColorKey.Id="ProgressBarColors.Background.Light"/>
            <SolidColorBrush x:Key="ProgressBarBorderBrush" Color="#FFD2D2D2" Core:ColorKey.Id="ProgressBarColors.BorderBrush.Light"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>




