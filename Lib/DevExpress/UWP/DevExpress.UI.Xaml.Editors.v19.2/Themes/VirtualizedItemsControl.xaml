<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="using:DevExpress.Core"
    xmlns:local="using:DevExpress.UI.Xaml.Editors.Native">

    <ControlTemplate x:Key="VirtualizedItemsControl_Template" TargetType="local:VirtualizedItemsControl">
        <local:MouseScrollingContainer>
            <ScrollViewer Height="Auto"
                      ZoomMode="Disabled"
                      VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollMode="Disabled"
                      VerticalSnapPointsAlignment="Near"
                      VerticalSnapPointsType="Mandatory"
                      IsDeferredScrollingEnabled="True">
                <local:VirtualizedItemsPanel />
            </ScrollViewer>
        </local:MouseScrollingContainer>
    </ControlTemplate>
    <Style x:Key="VirtualizedItemsControl_Style" TargetType="local:VirtualizedItemsControl">
        <Setter Property="Template" Value="{StaticResource VirtualizedItemsControl_Template}"/>
    </Style>
    <Style TargetType="local:VirtualizedItemsControl" BasedOn="{StaticResource VirtualizedItemsControl_Style}">
    </Style>
    <Style TargetType="local:VirtualizedSelector" BasedOn="{StaticResource VirtualizedItemsControl_Style}">
    </Style>
</ResourceDictionary>
