<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="using:DevExpress.Core">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="PopupContentContainerBackgroundBrush" Color="#FFFFFFFF" Core:ColorKey.Id="PopupContentContainerColors.Background.Light"/>
            <SolidColorBrush x:Key="PopupContentContainerBorderBrush" Color="#FF212121" Core:ColorKey.Id="PopupContentContainerColors.BorderBrush.Light"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="PopupContentContainerBackgroundBrush" Color="#FFDCDCDC" Core:ColorKey.Id="PopupContentContainerColors.Background.Default" />
            <SolidColorBrush x:Key="PopupContentContainerBorderBrush" Color="#FF212121" Core:ColorKey.Id="PopupContentContainerColors.BorderBrush.Default" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>



